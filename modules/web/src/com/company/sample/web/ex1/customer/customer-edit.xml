<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.sample.web.ex1.customer.CustomerEdit"
        datasource="customerDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.sample.web.ex1.customer">
    <dsContext>
        <datasource id="customerDs"
                    class="com.company.sample.entity.Customer"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="customerDs">
            <column width="250px">
                <field property="name"/>
                <field property="discount"/>
            </column>
        </fieldGroup>
        <button id="calcDiscountBtn"
                caption="Calculate discount"
                invoke="onCalcDiscountBtnClick"/>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
